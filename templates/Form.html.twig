{% extends 'base.html.twig' %}
{% block body %}
{{ parent() }}
<form>
        <fieldset>
          <legend class="text-success">Inscription</legend>
          <div class="form-group">
              <label for="exampleInputEmail1" class="text-primary">Pseudo</label>
              <input type="text" class="form-control" id="exampleInputName1" aria-describedby="emailHelp" placeholder="Enter Pseudo">
              <small id="pseudoHelp" class="form-text text-muted">An alias which stands right for you.</small>
            </div>
          <div class="form-group">
            <label for="exampleInputEmail1" class="text-primary">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class="text-primary">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password (8 characters)">
            <small id="passwrdHelp" class="form-text text-muted">8 characters minimum, including at least one capitalized letter, a number and a special caracter.</small>
          </div>
          &nbsp;
          <div class="form-group">
            <label for="exampleInputFile" class="text-primary">File input</label>
            <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
            <small id="fileHelp" class="form-text text-muted">Help the other user to identify you. Don't go too personnal</small>
          </div>
<br>
          <button type="submit" class="btn btn-success">Submit</button>
        </fieldset>
      </form>
{% endblock %}